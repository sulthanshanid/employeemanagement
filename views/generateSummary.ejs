<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Generate Salary Summary</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    />
  </head>
  <body>
    <div class="container">
      <h1 class="my-4">Generate Salary Summary</h1>
      <form action="/generate-summary" method="POST">
        <div class="form-group">
          <label for="month">Select Month:</label>
          <select id="month" name="month" class="form-control" required>
            <option value="">--Select Month--</option>
            <% for (let i = 1; i <= 12; i++) { %>
            <option value="<%= i %>">
              <%= new Date(0, i - 1).toLocaleString('en', { month: 'long' }) %>
            </option>
            <% } %>
          </select>
        </div>
        <div class="form-group">
          <label for="year">Select Year:</label>
          <input
            type="number"
            id="year"
            name="year"
            class="form-control"
            placeholder="YYYY"
            required
          />
        </div>
        <div class="form-group">
          <label for="workplace">Select Workplace:</label>
          <select id="workplace" name="workplace" class="form-control" required>
            <option value="">--Select Workplace--</option>
            <% workplaces.forEach(workplace => { %>
            <option value="<%= workplace. workplace_id %>">
              <%= workplace. workplace_name %>
            </option>
            <% }); %>
          </select>
        </div>
        <button type="submit" class="btn btn-primary">Generate Summary</button>
      </form>
    </div>
  </body>
</html>
